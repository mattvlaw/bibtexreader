}
@article{VISSER1996417,
title = {Two functions of analogical reasoning in design: a cognitive-psychology approach},
journal = {Design Studies},
volume = {17},
number = {4},
pages = {417-434},
year = {1996},
note = {Special Issue: Design Cognition and Computation},
issn = {0142-694X},
doi = {https://doi.org/10.1016/S0142-694X(96)00020-8},
url = {https://www.sciencedirect.com/science/article/pii/S0142694X96000208},
author = {Willemien Visser},
keywords = {creative design, analogical reasoning, case-based reasoning, industrial design, psychology of design},
abstract = {On the basis of data collected in three empirical studies conducted on industrial designers, this paper identifies two different types of ‘spontaneous’ use of analogy in design. Focus is on the first ‘stages’ of analogical reasoning, i.e. construction of a target representation, and search and retrieval of a source. At the action-execution level, analogies are used in order to solve the current design problem; at the action-management level, in order to make the action-execution process cognitively more economical. Differences between the uses concern their dependence on the routine character of the task, the distance between target and source, and their link with creativity and reuse (or case-based reasoning).}
}
@article{SATO198167,
title = {Prestructuring model for system-arrangement problems},
journal = {Design Studies},
volume = {2},
number = {2},
pages = {67-76},
year = {1981},
issn = {0142-694X},
doi = {https://doi.org/10.1016/0142-694X(81)90003-X},
url = {https://www.sciencedirect.com/science/article/pii/0142694X8190003X},
author = {Keiichi Sato and Charles L. Owen},
abstract = {A computer-supported procedure is presented for using requirement information to prestructure compotent relationships for a general class of arrangement problems. The procedure generalizes and extends the range of admissable requirement information and reduces the risk of local optimality in arrangement. Three categories of requirement information are identified: flow factors, explicit requirements and implicit requirements. These three are integrated and used to organize the components to be arranged into a ‘normative structure’ in the form of a semi-lattice hierarchy. The normative structure is an approximation of the spatial or temporal arrangement to be generated in real space.}
}
